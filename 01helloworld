package main

import "fmt"

func main() {

	name := "fed" // açıklama satırı olarak kullanılır. Bu benim ilk açıklama satırım.
	// burada name değişkeni string olarak atanmıştır.
	age := 40
	isMarried := true         // genelde şart ifadelerinde kullanılır.
	var weight float32 = 72.7 // float olarak kullanırsak kesirli sayılar için kullanılır.
	weight2 := 89.9

	fmt.Println("hello world", name)
	fmt.Println(age, "evlimi", isMarried)
	fmt.Println(weight, weight2)

	name1, lastname, yas := "emre", "dalga", 29 // kısayoldan değişken atamak :=in kullanılır.go dili kendi static type i anlar.
	fmt.Println(name1, lastname, yas)

	fmt.Printf("%T\n", name) // burada printf komutu ile değişkenin özelliklerini belirttik.  /n ise bir alt satıra geçmemize yarar.
	fmt.Printf("%T", age)

}
